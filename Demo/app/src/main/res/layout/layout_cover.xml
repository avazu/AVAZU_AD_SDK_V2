<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:orientation="horizontal">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:layout_weight="1.0">

            <ImageView
                android:id="@+id/image_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp" />

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/image_icon"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/image_icon"
                android:maxLines="1"
                android:text="title"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/text_title"
                android:layout_below="@id/text_title"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="this is the ad content, this is the ad content. this is the ad content. this is the ad content."
                android:textColor="#333333"
                android:textSize="10sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/text_action"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/sel_btn_action"
            android:gravity="center"
            android:text="Install"
            android:textColor="#59ba6a"
            android:textSize="13sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/image_cover"
        android:layout_width="match_parent"
        android:layout_height="188dp"
        android:background="#0a000000"
        android:scaleType="centerCrop" />
</LinearLayout>